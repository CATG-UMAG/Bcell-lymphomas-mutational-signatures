resume = true

process {
  errorStrategy = 'finish'
}

singularity {
  enabled = true
  autoMounts = true
}

profiles {
  slurm {
    process {
      executor = 'slurm'
      module = 'singularity'
    }
  }
}


// containers
process {
  withName: vcfToCsv          { container = 'quay.io/biocontainers/cyvcf2:0.30.11--py27hbf9e926_2' }
  withName: annotateVariants  { container = 'quay.io/biocontainers/twobitreader:3.1.7--pyh864c0ab_1' }
  withName: sigProfiler       { container = 'ghcr.io/catg-umag/bcell-lymphomas-mutational-signatures/sigprofiler:1.1.3' }
  withName: runNotebook       { container = 'ghcr.io/catg-umag/bcell-lymphomas-mutational-signatures/signature-analysis:20210924' }
}